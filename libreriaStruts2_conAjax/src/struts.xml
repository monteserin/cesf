<struts>
	<package name="com.pablomonteserin.action" extends="struts-default">
		<action name="altaLibro" class="com.pablomonteserin.action.LibroAction" method="insertar">
			<result>index.jsp</result>
		</action>
		<action name="consultaLibros" class="com.pablomonteserin.action.LibroAction" method="consultaLibros">
			<result>consulta.jsp</result>
		</action>
		
				<action name="bajaLibro" class="com.pablomonteserin.action.LibroAction" method="consultaLibros">
			<result>baja.jsp</result>
		</action>
					<action name="eliminaLibro" class="com.pablomonteserin.action.LibroAction" method="eliminaLibro">
			<result>index.jsp</result>
		</action>
		
					<action name="modificacion" class="com.pablomonteserin.action.LibroAction" method="consultaLibros">
